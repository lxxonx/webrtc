generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  password       String
  isTutor        Boolean
  firstname      String
  lastname       String?   @default("")
  birthYear      Int       @db.SmallInt
  leftSession    Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
  deletedAt      DateTime?
  socketId       String?   @default("")
  tutorSession   Session[] @relation("tutorSession")
  studentSession Session[] @relation("studentSession")
}

model Session {
  id        Int      @id @default(autoincrement())
  videoUrl  String?
  schedule  DateTime
  isCreated Boolean  @default(false)
  studentId Int?
  student   User?    @relation(name: "studentSession", fields: [studentId], references: [id])
  tutorId   Int
  tutor     User     @relation(name: "tutorSession", fields: [tutorId], references: [id])

  @@unique([schedule, tutorId])
}
