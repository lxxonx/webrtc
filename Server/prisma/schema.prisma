generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  password       String
  isTutor        Boolean
  firstname      String
  lastname       String?   @default("")
  birthYear      Int       @db.SmallInt
  leftClass    Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @updatedAt
  deletedAt      DateTime?
  tutorClass   Class[] @relation("tutorClass")
  studentClass Class[] @relation("studentClass")
}

model Class {
  id        String       @id @default(uuid())
  videoUrl  String?
  schedule  DateTime
  isCreated Boolean  @default(false)
  studentId Int?
  student   User?    @relation(name: "studentClass", fields: [studentId], references: [id])
  tutorId   Int
  tutor     User     @relation(name: "tutorClass", fields: [tutorId], references: [id])

  @@unique([schedule, tutorId])
}
