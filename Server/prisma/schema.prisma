generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  password     String
  isTutor      Boolean
  firstname    String
  lastname     String?   @default("")
  birthYear    Int       @db.SmallInt
  leftSession  Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
  deletedAt    DateTime?
  roomId       Int?
  tutorVideo   Video[]   @relation("tutor")
  studentVideo Video[]   @relation("student")
}

model Video {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
  studentId Int
  student   User     @relation(name: "student", fields: [studentId], references: [id])
  tutorId   Int
  tutor     User     @relation(name: "tutor", fields: [tutorId], references: [id])
}
